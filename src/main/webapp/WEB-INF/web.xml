<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>authorization</servlet-name>
        <jsp-file>/authorization.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addsong</servlet-name>
        <jsp-file>/add_song.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>addsong</servlet-name>
        <url-pattern>/addsong</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>voting</servlet-name>
        <jsp-file>/voting.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>voting</servlet-name>
        <url-pattern>/voting</url-pattern>
    </servlet-mapping>

</web-app>